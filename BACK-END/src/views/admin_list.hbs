<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> ACM Admin list </title>
    {{!-- FONTS --}}
    <link href="https://fonts.googleapis.com/css2?family=Recursive:wght@500;800;900&display=swap" rel="stylesheet">

    {{!-- ICONS --}}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    {{!-- BOOTSTRAP --}}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    {{!-- JQuery --}}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/WangYuLue/image-conversion/build/conversion.js"></script>

</head>
<body>
    {{> nav }}
    {{> modal}}
    {{> messages}}
    <div class="separator"></div>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mx-auto">
                                <h5><b>Usuarios activos </b>{{count}}</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {{#each users}}
                <div class="col-md-12">
                    <div class="card text-center">
                        <div class="card-body">
                        <div class="row">
                                <div class="col-md-6 col-sm-12 mx-auto">
                                    <img src="{{image_url}}" alt="Logo" class="{{#role_color role}}{{/role_color}} card-img-top m-2 rounded-circle profile_img">
                                </div>
                                <div class="col-md-6 col-sm-12 mx-auto text-left">
                                    <h5><b>Nombre:</b> {{name}} </h5>
                                    <h5><b>Descripci√≥n:</b> {{description}} </h5>
                                    <h5><b>Tags</b> {{tags}}</h5>
                                    <hr>
                                    <h5><b>Usuario:</b> {{username}} </h5>
                                    <h5><b>Email:</b> {{email}} </h5>
                                    <h5><b>Rol:</b> {{role}} </h5>
                                </div>
                            </div>
                            <!-- Button trigger modal -->
                        </div>
                    </div>
                </div>
            {{else}}
            <div class="col-md-12 mx-auto">
                <div class="card card-body text-center">
                    <p>For ever alone :).</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script>
        // Delete post Script
        function sure_about(id) {
            if(confirm("Do you really want to delete this user?")){
                window.location.href = "/delete/user/" + id
            }
        }
    </script>
</body>
</html>